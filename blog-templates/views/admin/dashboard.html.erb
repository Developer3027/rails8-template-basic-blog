<div class="flex justify-start items-center w-full mt-2">
  <div class="flex justify-center items-center">
    <div class="flex flex-col justify-between items-start">
        <h1 class="font-bold text-xl">Admin Dashboard</h1>
        Logged in as: <%= @admin.name %>
        <div class="flex justify-between items-center w-full">
          <%= button_to "Log Out", destroy_admin_session_path, method: :delete, class: "border border-gray-100 rounded-md bg-orange-800 px-4 my-2" %>
          <%= link_to "Home", root_path, class: "text-sky-400 underline" %>
        </div>
        <div class="flex justify-center items-center w-full border border-gray-100 rounded-md">
          <%= image_tag @admin.avatar, class: "w-16 h-16 rounded-full object-cover" %>
          <%= link_to "Change Avatar", edit_admin_registration_path, class: "border border-gray-100 rounded bg-blue-800 px-4 m-2" %>
        </div>
    </div>
  </div>
</div>