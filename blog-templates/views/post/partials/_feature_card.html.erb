<div class="flex flex-col justify-evenly items-center w-full max-w-sm mx-auto lg:flex-row lg:w-full lg:max-w-4xl p-2 md:p-8 lg:px-16 rounded-md border border-input-background bg-slate-50">
  <%= link_to featured_post do %>
    <div class="flex justify-center m-1 w-full">
      <% if featured_post.image.attached? %>
        <%= image_tag featured_post.image, class: "rounded-sm h-48 object-cover w-full", alt: "Cover image for the featured article: \#{featured_post.title}" %>
      <% else %>
        <%# Fallback image if no image attached to featured post %>
        <%= image_tag "placeholder_featured.jpg", class: "rounded-sm h-48 object-cover w-full", alt: "Placeholder image for featured article" %>
      <% end %>
    </div>
    <div class="flex flex-col text-sm text-slate-900 max-w-[340px] m-1">
        <h2 class="font-bold px-1 py-2"><%= featured_post.title %></h2>
        <h3 class="text-sm font-medium text-slate-700 px-1 pb-1"><%= featured_post.subtitle %></h3>
        <p class="pb-3 px-1"><%= featured_post.content.to_plain_text.truncate_words(30) %></p>
        <div class="flex justify-between font-medium px-1">
          <span><%= featured_post.published_at.strftime("%b %d") %> | <%= featured_post.admin.name %></span>
        </div>
        <% if featured_post.categories.any? %>
          <div class="flex flex-wrap gap-2 mt-2">
            <% featured_post.categories.each do |category| %>
              <%= link_to category.category_name, root_path, class: "flex items-center bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full hover:bg-blue-200" %>
            <% end %>
          </div>
        <% end %>
    </div>
  <% end %>
</div>
