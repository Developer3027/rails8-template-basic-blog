<div class="flex flex-col rounded-md border border-input-background bg-slate-50 my-4 p-2 lg:px-4">
  <%= link_to post do %>
    <% if post.image.attached? %>
      <%= image_tag post.image, class: "mx-auto rounded-sm h-48 object-cover", alt: "Cover image for the article: #{post.title}" %>
    <% else %>
      <%# Fallback image if no image attached to post %>
      <%= image_tag "placeholder_post.jpg", class: "rounded-sm h-48 object-cover", alt: "Placeholder image for article" %>
    <% end %>
    <div class="flex flex-col m-1">
        <h2 class="font-bold py-1"><%= post.title %></h2>
        <h3 class="text-sm font-medium text-slate-700 pb-1"><%= post.subtitle %></h3>
        <p class="pb-3"><%= post.content.to_plain_text.truncate_words(20) %></p>
        <div class="flex justify-between font-medium px-1">
          <span><%= post.published_at.strftime("%b %d") %> | <%= post.admin.name %></span>
        </div>
        <% if post.categories.any? %>
          <div class="flex flex-wrap gap-2 mt-2">
            <% post.categories.each do |category| %>
              <%= link_to category.category_name, root_path, class: "flex items-center bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full hover:bg-blue-200" %>
            <% end %>
          </div>
        <% end %>
    </div>
  <% end %>
</div>
