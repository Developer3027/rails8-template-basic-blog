<header class="bg-white border-b sticky top-0 z-50">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-20">

    <!-- Left: Logo -->
    <div class="flex-shrink-0">
      <%= link_to root_path, class: "text-xl font-semibold tracking-tight" do %>
        <%= image_tag "logo.svg", alt: "Site Logo", class: "h-8" %>
      <% end %>
    </div>

    <!-- Center: Navigation -->
    <div class="flex flex-col items-center">
      <%# Publication Title - pulled from SiteSetting %>
      <h1 class="text-xl md:text-2xl font-extrabold text-gray-900 my-1">
        Developer3027
        <%#= SiteSetting.current.publication_title %>
      </h1>
      <nav class="hidden md:flex space-x-8 text-sm font-medium text-gray-700">
        <%= link_to "Home", root_path, class: "hover:text-black hover:bg-gray-200 px-2 py-1 rounded" %>
        <%= link_to "About", root_path, class: "hover:text-black hover:bg-gray-200 px-2 py-1 rounded" %>
        <%= link_to "Archive", root_path, class: "hover:text-black hover:bg-gray-200 px-2 py-1 rounded" %>
        <%= link_to "Notes", root_path, class: "hover:text-black hover:bg-gray-200 px-2 py-1 rounded" %>
      </nav>
    </div>

    <!-- Right: Menu button -->
    <div class="flex items-center space-x-4">
      <% if current_admin %>
        <%= link_to "Signout", destroy_admin_session_path, data: { "turbo-method": :delete }, class: "hidden sm:inline-block bg-black text-white text-sm px-4 py-2 rounded hover:bg-gray-800" %>
      <% else %>
        <%= link_to "Signin", new_admin_session_path, class: "hidden sm:inline-block bg-black text-white text-sm px-4 py-2 rounded hover:bg-gray-800" %>
      <% end %>
    </div>

  </div>
</header>
